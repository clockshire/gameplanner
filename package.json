{
  "name": "app-gameplanner",
  "version": "1.0.0",
  "description": "Multi-event, multi-user app for managing and booking gameplay sessions",
  "main": "index.html",
  "scripts": {
    "web": "npx serve -s . -l 3000",
    "web:dev": "nodemon --watch . --ext html,js,css --ignore node_modules --ignore backend --exec \"npx serve -s . -l 3000\"",
    "server": "node backend/src/server.js",
    "server:dev": "nodemon --watch . --ext html,js,css --ignore node_modules --ignore src backend/src/server.js",
    "dev": "concurrently \"npm run dynamodb:start\" \"npm run server:dev\" \"npm run web:dev\"",
    "build": "echo 'Build complete - static files ready for deployment'",
    "dynamodb:janky-start": "docker run -d --name dynamodb-local -p 8000:8000 -v $(pwd)/docker/dynamodb:/home/dynamodblocal/data amazon/dynamodb-local:latest -jar DynamoDBLocal.jar -sharedDb -dbPath /home/dynamodblocal/data",
    "dynamodb:janky-stop": "docker stop dynamodb-local && docker rm dynamodb-local",
    "dynamodb:setup": "node backend/scripts/setup-local.js",
    "dynamodb:test": "node backend/scripts/test-operations.js",
    "dynamodb:status": "docker ps --filter name=dynamodb-local",
    "minio:test": "node backend/scripts/test-minio.js",
    "image-upload:test": "node backend/scripts/test-image-upload.js",
    "dynamodb:start": "make start-local-dynamodb",
    "dynamodb:stop": "make stop-local-dynamodb",
    "test:venue-deletion": "node src/tests/venue-deletion.test.js",
    "test:all": "node src/tests/test-runner.js",
    "test": "npm run test:all"
  },
  "dependencies": {
    "aws-sdk": "^2.1490.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.1",
    "referral-codes": "^3.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "serve": "^14.2.1"
  },
  "keywords": [
    "react",
    "gameplanner",
    "aws-amplify",
    "multi-user"
  ],
  "author": "chisel@clockshire.uk",
  "license": "MIT"
}
